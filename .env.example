# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
NODE_ENV=development

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME="BoxLog Marketing"
NEXT_PUBLIC_SITE_DESCRIPTION="Modern SaaS marketing website built with Next.js"

# =============================================================================
# ANALYTICS & TRACKING
# =============================================================================

# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager (optional)
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Google Search Console
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=your-verification-code

# Hotjar (optional)
NEXT_PUBLIC_HOTJAR_ID=your-hotjar-id

# =============================================================================
# CONTENT MANAGEMENT
# =============================================================================

# Contentful (if using headless CMS)
CONTENTFUL_SPACE_ID=your-space-id
CONTENTFUL_ACCESS_TOKEN=your-access-token
CONTENTFUL_PREVIEW_ACCESS_TOKEN=your-preview-token
CONTENTFUL_PREVIEW_SECRET=your-preview-secret

# =============================================================================
# EMAIL & FORMS
# =============================================================================

# SendGrid (for transactional emails)
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Mailchimp (for newsletter)
MAILCHIMP_API_KEY=your-mailchimp-api-key
MAILCHIMP_SERVER_PREFIX=us1
MAILCHIMP_AUDIENCE_ID=your-audience-id

# Contact Form
CONTACT_EMAIL=contact@yoursite.com

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Stripe (for payments)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key
STRIPE_SECRET_KEY=sk_test_your-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Database (if needed)
DATABASE_URL=postgresql://username:password@localhost:5432/database

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# =============================================================================
# SECURITY
# =============================================================================

# Secret for JWT tokens and other cryptographic operations
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3000

# API Keys and Secrets
API_SECRET_KEY=your-api-secret-key

# =============================================================================
# DEVELOPMENT & BUILD
# =============================================================================

# Bundle Analyzer
ANALYZE=false

# Skip type checking during build (not recommended for production)
SKIP_TYPE_CHECK=false

# Skip ESLint during build (not recommended for production)
SKIP_LINT=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable beta features
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false

# Enable maintenance mode
NEXT_PUBLIC_MAINTENANCE_MODE=false

# Enable PWA features
NEXT_PUBLIC_ENABLE_PWA=true

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Social Media Links
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/yourhandle
NEXT_PUBLIC_GITHUB_URL=https://github.com/yourusername
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/yourcompany

# Support and Documentation
NEXT_PUBLIC_SUPPORT_EMAIL=support@yoursite.com
NEXT_PUBLIC_DOCS_URL=https://docs.yoursite.com

# =============================================================================
# MONITORING & ERROR TRACKING
# =============================================================================

# Sentry (error tracking)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project
SENTRY_AUTH_TOKEN=your-auth-token

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS=true

# =============================================================================
# CDN & ASSETS
# =============================================================================

# Image CDN
NEXT_PUBLIC_IMAGE_CDN_URL=https://your-cdn.com

# Asset CDN
NEXT_PUBLIC_ASSET_CDN_URL=https://assets.yoursite.com

