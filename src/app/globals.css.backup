@import "tailwindcss";

/* Theme Variables */
@layer theme {
  :root {
    /* shadcn/ui compatibility - HSL format */
    --background: 0 0% 100%;
    --foreground: 240 10% 3.9%;
    --card: 0 0% 100%;
    --card-foreground: 240 10% 3.9%;
    --popover: 0 0% 100%;
    --popover-foreground: 240 10% 3.9%;
    --primary: 221.2 83.2% 53.3%;
    --primary-foreground: 210 40% 98%;
    --secondary: 210 40% 96%;
    --secondary-foreground: 222.2 84% 4.9%;
    --muted: 210 40% 96%;
    --muted-foreground: 215.4 16.3% 46.9%;
    --accent: 210 40% 96%;
    --accent-foreground: 222.2 84% 4.9%;
    --destructive: 0 84.2% 60.2%;
    --destructive-foreground: 210 40% 98%;
    --border: 214.3 31.8% 91.4%;
    --input: 214.3 31.8% 91.4%;
    --ring: 221.2 83.2% 53.3%;
    --radius: 0.5rem;

    /* Neutral Color System - RGB format for light mode */
    --bg-primary: 250 250 250;      /* neutral-50 */
    --bg-secondary: 245 245 245;    /* neutral-100 */
    --bg-tertiary: 229 229 229;     /* neutral-200 */
    --text-primary: 23 23 23;       /* neutral-900 */
    --text-secondary: 82 82 82;     /* neutral-600 */
    --text-tertiary: 163 163 163;   /* neutral-400 */
    --border-primary: 229 229 229;  /* neutral-200 */
    --border-secondary: 212 212 212; /* neutral-300 */

    /* Semantic colors - meaningful information only */
    --error-color: 239 68 68;       /* red-500 */
    --error-bg: 254 242 242;        /* red-50 */
    --success-color: 34 197 94;     /* green-500 */
    --success-bg: 240 253 244;      /* green-50 */
    --warning-color: 234 179 8;     /* yellow-500 */
    --warning-bg: 254 249 195;      /* yellow-50 */
    --link-color: 59 130 246;       /* blue-500 */
    --link-hover: 37 99 235;        /* blue-600 */
    --info-color: 99 102 241;       /* indigo-500 */
    --info-bg: 238 242 255;         /* indigo-50 */

    /* Focus and selection */
    --focus-ring: 59 130 246;       /* blue-500 */
    --selection: 191 219 254;       /* blue-200 */

    /* Tag colors */
    --tag-neutral-bg: 245 245 245;
    --tag-neutral-text: 82 82 82;
    --tag-neutral-hover: 229 229 229;
    --tag-accent-bg: 238 242 255;
    --tag-accent-text: 79 70 229;
    --tag-accent-hover: 224 231 255;

    /* Release type colors */
    --release-new-bg: 240 253 244;
    --release-new-text: 22 101 52;
    --release-new-border: 187 247 208;
    --release-improvement-bg: 219 234 254;
    --release-improvement-text: 30 64 175;
    --release-improvement-border: 191 219 254;
    --release-bugfix-bg: 255 237 213;
    --release-bugfix-text: 154 52 18;
    --release-bugfix-border: 253 186 116;
    --release-breaking-bg: 254 242 242;
    --release-breaking-text: 153 27 27;
    --release-breaking-border: 254 202 202;
    --release-security-bg: 243 232 255;
    --release-security-text: 107 33 168;
    --release-security-border: 221 214 254;

    /* Search highlight */
    --highlight-bg: 254 240 138;
    --highlight-text: 146 64 14;

    /* Icon backgrounds */
    --icon-bg-primary: 245 245 245;
    --icon-bg-secondary: 238 242 255;
    --icon-bg-tertiary: 240 253 244;

    /* Button colors */
    --signup-btn-bg: 23 23 23;
    --signup-btn-text: 255 255 255;
  }

  .dark {
    /* shadcn/ui compatibility - dark mode */
    --background: 240 10% 3.9%;
    --foreground: 0 0% 98%;
    --card: 240 10% 3.9%;
    --card-foreground: 0 0% 98%;
    --popover: 240 10% 3.9%;
    --popover-foreground: 0 0% 98%;
    --primary: 221.2 83.2% 53.3%;
    --primary-foreground: 210 40% 98%;
    --secondary: 240 3.7% 15.9%;
    --secondary-foreground: 0 0% 98%;
    --muted: 240 3.7% 15.9%;
    --muted-foreground: 240 5% 64.9%;
    --accent: 240 3.7% 15.9%;
    --accent-foreground: 0 0% 98%;
    --destructive: 0 62.8% 30.6%;
    --destructive-foreground: 0 0% 98%;
    --border: 240 3.7% 15.9%;
    --input: 240 3.7% 15.9%;
    --ring: 221.2 83.2% 53.3%;

    /* Neutral Color System - dark mode */
    --bg-primary: 23 23 23;
    --bg-secondary: 38 38 38;
    --bg-tertiary: 64 64 64;
    --text-primary: 250 250 250;
    --text-secondary: 212 212 212;
    --text-tertiary: 115 115 115;
    --border-primary: 64 64 64;
    --border-secondary: 82 82 82;

    /* Semantic colors - dark mode */
    --error-color: 239 68 68;
    --error-bg: 127 29 29;
    --success-color: 34 197 94;
    --success-bg: 20 83 45;
    --warning-color: 234 179 8;
    --warning-bg: 113 63 18;
    --link-color: 59 130 246;
    --link-hover: 37 99 235;
    --info-color: 99 102 241;
    --info-bg: 49 46 129;

    /* Focus and selection - dark mode */
    --focus-ring: 59 130 246;
    --selection: 30 64 175;

    /* Tag colors - dark mode */
    --tag-neutral-bg: 38 38 38;
    --tag-neutral-text: 212 212 212;
    --tag-neutral-hover: 64 64 64;
    --tag-accent-bg: 49 46 129;
    --tag-accent-text: 165 180 252;
    --tag-accent-hover: 67 56 202;

    /* Release type colors - dark mode */
    --release-new-bg: 20 83 45;
    --release-new-text: 187 247 208;
    --release-new-border: 22 101 52;
    --release-improvement-bg: 30 58 138;
    --release-improvement-text: 191 219 254;
    --release-improvement-border: 30 64 175;
    --release-bugfix-bg: 124 45 18;
    --release-bugfix-text: 253 186 116;
    --release-bugfix-border: 154 52 18;
    --release-breaking-bg: 127 29 29;
    --release-breaking-text: 254 202 202;
    --release-breaking-border: 153 27 27;
    --release-security-bg: 88 28 135;
    --release-security-text: 221 214 254;
    --release-security-border: 107 33 168;

    /* Search highlight - dark mode */
    --highlight-bg: 133 77 14;
    --highlight-text: 254 240 138;

    /* Icon backgrounds - dark mode */
    --icon-bg-primary: 38 38 38;
    --icon-bg-secondary: 49 46 129;
    --icon-bg-tertiary: 20 83 45;

    /* Button colors - dark mode */
    --signup-btn-bg: 255 255 255;
    --signup-btn-text: 23 23 23;
  }

  /* System theme auto-switching */
  @media (prefers-color-scheme: dark) {
    :root:not(.light):not(.dark) {
      --background: 240 10% 3.9%;
      --foreground: 0 0% 98%;
      --bg-primary: 23 23 23;
      --bg-secondary: 38 38 38;
      --bg-tertiary: 64 64 64;
      --text-primary: 250 250 250;
      --text-secondary: 212 212 212;
      --text-tertiary: 115 115 115;
      --border-primary: 64 64 64;
      --border-secondary: 82 82 82;
      --error-bg: 127 29 29;
      --success-bg: 20 83 45;
      --warning-bg: 113 63 18;
      --info-bg: 49 46 129;
      --selection: 30 64 175;
      --tag-neutral-bg: 38 38 38;
      --tag-neutral-text: 212 212 212;
      --tag-neutral-hover: 64 64 64;
      --tag-accent-bg: 49 46 129;
      --tag-accent-text: 165 180 252;
      --tag-accent-hover: 67 56 202;
      --highlight-bg: 133 77 14;
      --highlight-text: 254 240 138;
      --icon-bg-primary: 38 38 38;
      --icon-bg-secondary: 49 46 129;
      --icon-bg-tertiary: 20 83 45;
      --signup-btn-bg: 255 255 255;
      --signup-btn-text: 23 23 23;
    }
  }

  /* High contrast mode */
  @media (prefers-contrast: high) {
    :root {
      --border-primary: 0 0 0;
      --border-secondary: 64 64 64;
      --focus-ring: 0 0 0;
    }

    .dark {
      --border-primary: 255 255 255;
      --border-secondary: 212 212 212;
      --focus-ring: 255 255 255;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    * {
      transition-duration: 0.01ms !important;
      animation-duration: 0.01ms !important;
    }
  }
}

/* Base Styles */
@layer base {
  * {
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
    font-display: swap;
  }

  body {
    color: hsl(var(--foreground));
    background: hsl(var(--background));
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    line-height: 1.6;
    margin: 0;
    padding: 0;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  main {
    min-height: calc(100vh - 64px);
  }

  img, picture, video, canvas, svg {
    max-width: 100%;
    height: auto;
  }

  header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    background: hsl(var(--background));
    height: 64px;
    contain: layout;
  }

  /* Accessibility - focus states */
  a:focus-visible,
  button:focus-visible,
  input:focus-visible,
  textarea:focus-visible,
  select:focus-visible {
    outline: 2px solid rgb(var(--focus-ring));
    outline-offset: 2px;
    border-radius: 4px;
  }

  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
      scroll-behavior: auto !important;
    }
  }

  @media (prefers-contrast: high) {
    button, input, select, textarea {
      border-width: 2px;
    }
  }
}

/* Utilities */
@layer utilities {
  /* Screen reader only */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  /* Responsive text */
  .text-responsive-sm { @apply text-sm sm:text-base; }
  .text-responsive-base { @apply text-base sm:text-lg; }
  .text-responsive-lg { @apply text-lg sm:text-xl; }
  .text-responsive-xl { @apply text-xl sm:text-2xl; }
  .text-responsive-2xl { @apply text-2xl sm:text-3xl; }
  .text-responsive-3xl { @apply text-3xl sm:text-4xl lg:text-5xl; }

  /* 8px Grid spacing */
  .space-responsive { @apply space-y-4 sm:space-y-6 lg:space-y-8; }
  .gap-responsive { @apply gap-4 sm:gap-6 lg:gap-8; }
  .p-responsive { @apply p-4 sm:p-6 lg:p-8; }

  /* Touch targets */
  .touch-target {
    @apply min-h-[48px] min-w-[48px] flex items-center justify-center;
  }

  /* Visibility */
  .mobile-only { @apply block sm:hidden; }
  .desktop-only { @apply hidden lg:block; }

  /* Line clamp */
  .line-clamp-1 {
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
  }

  .line-clamp-2 {
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
  }

  .line-clamp-3 {
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
  }
}
