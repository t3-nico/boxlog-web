# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Source code
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf
*.json text eol=lf
*.css text eol=lf

# Configuration
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.md text eol=lf
*.mdx text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Documentation
*.txt text eol=lf
README* text eol=lf
LICENSE* text eol=lf
CHANGELOG* text eol=lf

# Git
.gitattributes text eol=lf
.gitignore text eol=lf
.gitmodules text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.webp binary
*.avif binary
*.woff binary
*.woff2 binary
*.ttf binary
*.otf binary
*.eot binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary

# Archives (treat as binary)
*.7z binary
*.gz binary
*.tar binary
*.zip binary

# Linguist overrides (for GitHub language detection)
*.css linguist-vendored=false
*.scss linguist-vendored=false
*.js linguist-vendored=false
*.tsx linguist-vendored=false
*.ts linguist-vendored=false

# Generated files
package-lock.json -diff
pnpm-lock.yaml -diff
