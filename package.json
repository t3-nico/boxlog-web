{
  "name": "dayopt-marketing",
  "version": "0.1.0",
  "description": "Modern, high-performance marketing website built with Next.js 16, featuring comprehensive accessibility (WCAG 2.1 AA), enterprise-grade security, and type-safe development",
  "private": true,
  "type": "module",
  "author": "Dayopt Team",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/t3-nico/dayopt-web"
  },
  "keywords": [
    "nextjs",
    "react",
    "typescript",
    "tailwindcss",
    "shadcn-ui",
    "mdx",
    "i18n",
    "accessibility",
    "wcag",
    "performance",
    "marketing-site"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "analyze": "ANALYZE=true npm run build",
    "type-check": "tsc --noEmit",
    "build:production": "NODE_ENV=production npm run build",
    "audit:accessibility": "node src/scripts/accessibility-audit.js",
    "test:a11y": "npm run build && npm run audit:accessibility",
    "audit:performance": "node src/scripts/performance-audit.js",
    "test:performance": "npm run build && npm run audit:performance",
    "cleanup:console": "node src/scripts/cleanup-console.js",
    "prepare:production": "npm run cleanup:console && npm run lint && npm run type-check && npm run build",
    "prepare": "husky"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@upstash/ratelimit": "^2.0.8",
    "@upstash/redis": "^1.36.1",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "glob": "^13.0.0",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.563.0",
    "next": "^16.1.6",
    "next-intl": "^4.8.1",
    "next-mdx-remote": "^6.0.0",
    "next-themes": "^0.4.6",
    "react": "^19",
    "react-dom": "^19",
    "react-hook-form": "^7.71.1",
    "rehype-highlight": "^7.0.2",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@next/bundle-analyzer": "^16.1.6",
    "@next/eslint-plugin-next": "^16.1.6",
    "@tailwindcss/postcss": "^4.1.15",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^25",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.51.0",
    "autoprefixer": "^10.4.24",
    "eslint": "^9",
    "eslint-config-next": "^16.1.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.38",
    "prettier": "^3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.15",
    "typescript": "^5"
  },
  "optionalDependencies": {
    "@tailwindcss/oxide-darwin-arm64": "^4.1.18",
    "@tailwindcss/oxide-linux-x64-gnu": "^4.1.18",
    "lightningcss-darwin-arm64": "^1.31.1",
    "lightningcss-linux-x64-gnu": "^1.31.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
